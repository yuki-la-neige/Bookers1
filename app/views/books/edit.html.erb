<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<%= render "error", model: f.object %>
	<%= f.label :Title %><br>
	<%= f.text_field :title %><br>
	<%= f.label :Body %><br>
	<%= f.text_area :body %><br>
	<%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book) %> | 
<%= link_to "Back", books_path %>